<div class="col-sm-10">
  <h1 class="page-title">Lista de clientes</h1>
  <div>
    <table class="table">
    <thead>
      <tr>
        <th>Cliente</th>
        <th>DNI/NIE</th>
        <th>Facturas</th>
        <th>Presupuestos</th>
        <th>Recibos</th>
        <th class="tabActions">Acciones</th>
      </tr>
    </thead>
    <tbody>
    {{#each clients}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.dni}}</td>
        <td></td>
        <td></td>
        <td></td>
        <td>
        <div class="btn-group" role="group" aria-label="Acciones">
          <button obtainClient="true" type="button" class="btn btn-info btn-rescate" id="{{this._id}}"><i class="fa fa-info" aria-hidden="true"></i></button>
          <a href="clients/edit/{{this._id}}" class="btn btn-warning" role="button"><i class="fa fa-pencil" aria-hidden="true"></i></a>
          <button deleteClient="true" type="button" class="btn btn-danger btn-rescate" id="{{this._id}}"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
        </div>
        </td>
      </tr>
    {{/each}}
    </tbody>
    </table>
  </div>
</div>
