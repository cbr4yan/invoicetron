<div class="col-sm-10">
  {{#ifCond mode 'add'}}
   <h1 class="page-title">Cliente nuevo</h1>
  {{else}}
     <h1 class="page-title">Editar cliente</h1>
  {{/ifCond}}
  <form method="post" id="client-form">
    <input type="hidden" name="mode" id="mode" value="{{mode}}">
    <input type="hidden" name="id" id="idClient" value="{{client._id}}">
    <div class="form-group">
      <label for="name" class="control-label">Cliente</label>
      <input type="text" name="name" id="name" class="form-control" value="{{client.name}}" autocomplete="off">
    </div>
    <div class="form-group">
      <label for="dni" class="control-label">DNI/NIE</label>
      <input type="text" name="dni" id="dni" class="form-control" value="{{client.dni}}" autocomplete="off">
    </div>
    <div class="form-group">
      <label for="telf" class="control-label">Telefono</label>
      <input type="text" name="telf" id="telf" class="form-control" value="{{client.telf}}" autocomplete="off">
    </div>
    <div class="form-group">
      <label for="email" class="control-label">Email</label>
      <input type="email" name="email" id="email" class="form-control" value="{{client.email}}" autocomplete="off">
    </div>
    <div class="form-group">
      <label for="address" class="control-label">Direccion</label>
      <input type="text" name="address" id="address" value="{{client.address}}" class="form-control">
    </div>
    <div class="form-group">
      <label for="zipcode" class="control-label">Codigo postal</label>
      <input type="text" name="zipcode" id="zipcode" value="{{client.zipcode}}" class="form-control">
    </div>
    <div class="form-group">
      <label for="city" class="control-label">Ciudad</label>
      <input type="text" name="city" id="city" value="{{client.city}}" class="form-control">
    </div>
    <div class="form-group">
      <button type="submit" id="account-form-btn1" class="btn btn-success">Guardar</button>
      {{#ifCond mode 'edit' }}
      <button deleteClient="true" type="button" class="btn btn-danger btn-rescate" id="{{client._id}}">Borrar</button>
      {{/ifCond}}
    </div>
  </form>
</div>
